{{ render '@header' }}

{{#extend '@main' }}
  {{#content 'main-content' }}
    {{#extend '@grid-container--site-width'}}
      {{#content 'grid-container-content'}}
        {{#extend '@grid-row'}}
          {{#content 'grid-row-content'}}
            {{#embed '@grid-column'}}
              {{#content 'grid-column-content'}}
                {{> @heading-page page-heading }}
                {{> @text-box text-box }}
              {{/content}}
            {{/embed}}
          {{/content}}
        {{/extend}}
        {{#embed '@grid-row--two-columns'}}
          {{#content 'grid-row-content'}}
            {{#embed '@grid-column'}}
              {{#content 'grid-column-content'}}
                {{ render '@image-text-section'}}
              {{/content}}
            {{/embed}}
            {{#embed '@grid-column'}}
              {{#content 'grid-column-content'}}
                {{ render '@image-text-section'}}
              {{/content}}
            {{/embed}}
          {{/content}}
        {{/embed}}
        {{#embed '@grid-row'}}
          {{#content 'grid-row-content'}}
            {{#embed '@grid-column'}}
              {{#content 'grid-column-content'}}
                {{#embed '@grid-row'}}
                  {{#content 'grid-row-content'}}
                    {{ render '@image-text-section'}}
                  {{/content}}
                {{/embed}}
                {{#embed '@grid-row'}}
                  {{#content 'grid-row-content'}}
                    {{ render '@text-image-section'}}
                  {{/content}}
                {{/embed}}
              {{/content}}
            {{/embed}}
          {{/content}}
        {{/embed}}
      {{/content}}
    {{/extend}}
  {{/content}}
{{/extend}}

{{ render '@footer' }}